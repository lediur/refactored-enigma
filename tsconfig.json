{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"]
}
