{
  "compileOnSave": false,
  "compilerOptions": {
    "outFile": "./dist/index.js",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": true,
    "module": "amd",
    "target": "es5",
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"]
}
